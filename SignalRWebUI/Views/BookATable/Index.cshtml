@model CreateBookingDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

@* BOOK A TABLE INDEX *@

<div class="sub_page">
    <div class="hero_area">
        <div class="bg-box">
            <img src="~/feane-1.0.0/images/herok.jpg" alt="">
        </div>
        <vc:_default-navbar-component-partial />
    </div>

    <section class="book_section layout_padding">
        <div class="container">
            <div class="heading_container">
                <h2>
                    Rezervasyon Oluşturun
                </h2>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form_container">
                        <form method="post" asp-controller="BookATable" asp-action="Index">
                            <div>
                                <input type="text" class="form-control" placeholder="Adınız Soyadınız" asp-for="Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>

                            </div>
                            <div>
                                <input type="text" class="form-control" placeholder="Telefon Numaranız" asp-for="Phone" />
                                <span asp-validation-for="Phone" class="text-danger"></span>

                            </div>
                            <div>
                                <input type="email" class="form-control" placeholder="Mail Adresiniz" asp-for="Mail" />
                                <span asp-validation-for="Mail" class="text-danger"></span>

                            </div>
                            <div>
                                <select asp-for="PersonCount" class="form-control nice-select wide">

@*                                 <select class="form-control nice-select wide" asp-for="PersonCount">
 *@                                    <option value="" disabled selected>Kişi Sayısı</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                </select>

                                <span asp-validation-for="PersonCount" class="text-danger"></span>

                            </div>
                            <div>
                                <input type="date" class="form-control" asp-for="Date">
                                <span asp-validation-for="Date" class="text-danger"></span>

                            </div>
                            <div class="btn_box">
                                <button>
                                    Yerinizi Ayırtın
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="map_container ">
                        @*                     <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d195113.5123616082!2d28.929887483011576!3d40.172376269582365!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14ca3c330cd4513b%3A0x67ea9d59607ca3a!2sOsmangazi%CC%87%2FBursa!5e0!3m2!1str!2str!4v1730291983377!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        *@                    <iframe src="@ViewBag.location" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

                    </div>
                </div>
              @*   <div class="col-md-6">
                    <div class="map_container ">
                        <div id="googleMap"></div>
                    </div>
                </div> *@
            </div>
        </div>
    </section>

</div>

